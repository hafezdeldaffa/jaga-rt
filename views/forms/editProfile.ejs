<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>
        <%= title %>
    </title>

    <link rel="shortcut icon" href="/assets/images/icon-nobg.ico" type="image/svg" />

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/assets/css/sb-admin-2.min.css" rel="stylesheet" />
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <div class="sidebar-brand-text mx-3">Jaga-RT</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0" />

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link active" href="/dashboard">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard </span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider" />

            <!-- Heading -->
            <div class="sidebar-heading">Keluarga</div>

            <li class="nav-item">
                <a class="nav-link" href="/keluarga">
                    <i class="fas fa-list fa-sm fa-fw"></i>
                    <span>Anggota Keluarga</span></a>
            </li>

            <% if (keluarga.role==='RT' ) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/masyarakat">
                        <i class="fas fa-fw fa-table"></i>
                        <span>Masyarakat Positif</span></a>
                </li>
                <% } %>

                    <!-- Nav Item - Tables -->
                    <li class="nav-item">
                        <a class="nav-link" href="/laporan">
                            <i class="fas fa-fw fa-clipboard-list"></i>
                            <span>Laporan</span></a>
                    </li>

                    <!-- Divider -->
                    <!-- <hr class="sidebar-divider d-none d-md-block"> -->

                    <!-- Divider -->
                    <hr class="sidebar-divider d-none d-md-block" />

                    <!-- Sidebar Toggler (Sidebar) -->
                    <div class="text-center d-none d-md-inline">
                        <button class="rounded-circle border-0" id="sidebarToggle"></button>
                    </div>
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->

                    <!-- Topbar Search -->

                    <i class="bi bi-arrow-left-circle-fill"></i>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <%- include('../includes/userInfo') %>
                    </ul>
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">
                        Form Edit Profile <%= keluarga.nama %>
                    </h1>
                    <br />

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                Data Keluarga <%= keluarga.namaKepalaKeluarga %>
                            </h6>
                        </div>
                        <div class="card-body">
                            <form class="user" action="/editkeluarga/<%= keluarga._id %> " method="post">
                                <div class="form-group">
                                    <input name="nama" type="text" class="form-control"
                                        value="<%= keluarga.namaKepalaKeluarga%>" placeholder="Nama Kepala Keluarga" />
                                </div>
                                <div class="form-group">
                                    <input disabled name="role" type="text" class="form-control"
                                        value="<%= keluarga.role %>" placeholder="Role Kepala Keluarga" />
                                </div>
                                <% if (keluarga.role==='Keluarga' ) { %>
                                    <div class="form-group">
                                        <input name="tokenRT" type=" text" class="form-control"
                                            value="<%= keluarga.tokenRT %>" placeholder="Token RT" />
                                    </div>
                                    <% } %>
                                        <div class="form-group">
                                            <input name="email" type="email" class="form-control"
                                                value="<%= keluarga.email %>" placeholder="Email" />
                                        </div>
                                        <div class="form-group">
                                            <input name="alamat" type="text" class="form-control"
                                                value="<%= keluarga.alamat %>" placeholder="Alamat" />
                                        </div>
                                        <div class="form-group">
                                            <input name="provinsi" type="text" class="form-control"
                                                value="<%= keluarga.provinsi%>" placeholder="Provinsi" />
                                        </div>
                                        <div class="form-group row mb-3">
                                            <div class="col-md-3">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputFirstName" type="number"
                                                        name="rt" placeholder="RT" value="<%= keluarga.rt %>" />

                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-floating">
                                                    <input class="form-control" id="inputLastName" type="number"
                                                        name="rw" placeholder="RW" value="<%= keluarga.rw %>" />

                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-floating">
                                                    <input class="form-control" id="inputLastName" type="number"
                                                        name="nomorRumah" placeholder="No. Rumah"
                                                        value="<%= keluarga.nomorRumah %>" />

                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-floating">
                                                    <input class="form-control" id="inputLastName" type="number"
                                                        name="kodePos" placeholder="Kode Pos"
                                                        value="<%= keluarga.kodePos %>" />

                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Edit Data Profile
                                        </button>
                            </form>
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                Data Password <%= keluarga.namaKepalaKeluarga %>
                            </h6>
                        </div>
                        <div class="card-body">
                            <form class="user" action="/editPassowrd/<%= keluarga._id %> " method="post">
                                <div class="form-group">
                                    <input name="password" type="text" class="form-control"
                                        placeholder="Password Baru" />
                                </div>
                                <div class="form-group">
                                    <input name="confirm" type="text" class="form-control"
                                        placeholder="Konfirmasi Password Baru" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Edit Data Password
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../includes/footer') %>
                <!-- End of footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    Select "Logout" below if you are ready to end your current session.
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">
                        Cancel
                    </button>
                    <a class="btn btn-primary" href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>